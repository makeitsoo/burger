<!-- handlebars body -->

<div class="container">

	<div class="row">
		<img id="burger-header-img" class="img-responsive center-block" src="assets/img/burger.jpg"/>
		<h1 class="text-center">Eat-Da-Burger!</h1>
	</div>

	<div class="row text-center">
		<form method="POST" action="/burgers" class="form-inline">
			<div class="form-group">
				<input type="hidden" name="devoured" value="0"/>
				<label class="sr-only" for="burger-input">Burger Menu</label>
				<input name="burger" type="text" class="form-control" id="burger-input" placeholder="What kind of burger would you like to add to the menu?"/>
			</div>
			<button type="submit" class="btn btn-default">Add Burger</button>
		</form>
	</div>

	<div class="row text-center">
		<div class="col-xs-6">
			<div class="panel panel-default">
				<div class="panel-heading">Burger Menu</div>
				<div id="burgers-added" class="panel-body">

						<hr>

						{{#each burgers}}
							{{#unless devoured}}
								<form method="POST" action="/burgers/update/{{burger_id}}?_method=PUT" class="form-inline">
									<div class="form-group">
										<input type="hidden" name="devoured" value="1"/>
										<label class="sr-only">Burger Menu</label>
										<p class="form-control-static">{{ burger_name }}</p>
									</div>
									<button id="burger-id{{burger_id}}" type="submit" class="btn btn-default">EAT!</button>
									<hr>
								</form>
							{{/unless}}
						{{/each}}

				</div>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="panel panel-default">
				<div class="panel-heading">DEVOURED BURGERS</div>
				<div id="burgers-devoured" class="panel-body">

						<hr>

						{{#each burgers}}
							{{#if devoured}}
								<form method="POST" action="/burgers/update/{{burger_id}}?_method=DELETE" class="form-inline">
									<div class="form-group">
										<label class="sr-only">Devoured burger</label>
										<p class="form-control-static">{{ burger_name }}</p>
									</div>
									<button id="burger-id{{burger_id}}" type="submit" class="btn btn-default">Gross! Throw it Away..</button>
									<hr>
								</form>
							{{/if}}
						{{/each}}

				</div>
			</div>
		</div>
	</div>

</div>